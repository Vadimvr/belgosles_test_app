                <ResourceDictionary Source="Resources/Base/LableStyle.xaml"/>
                <ResourceDictionary Source="Resources/Base/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Resources/Base/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="Resources/Base/DataGridStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
